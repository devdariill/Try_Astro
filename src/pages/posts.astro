---
interface Post {
  userId: number
  title: string
  body: string
}
import Layout from '../layouts/Layout.astro'
const response = await fetch('https://jsonplaceholder.typicode.com/posts')
const posts = await response.json()
---

<Layout metaDescription="Posts" metaTitle="Posts">
  <h1>Publicaciones</h1>
  {
    posts.map((post: Post) => (
      <div>
        <h5>{post.userId}</h5>
        <h3 class="text-white">{post.title}</h3>
        <p class="text-zinc-500">{post.body}</p>
      </div>
    ))
  }
</Layout>
