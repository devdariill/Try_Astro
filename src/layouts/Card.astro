---
const { h1, p } = Astro.props
interface Props {
  h1: string
  p?: string
}
---

<div class="card">
  <h1>{h1}</h1>
  <p>
    {p}
  </p>
</div>
<style>
  .card {
    color: black;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 2px 4px 0 rgba(255, 255, 255, 0.4),
      0 25px 50px 0 rgba(255, 255, 255, 0.2);
    padding: 20px;
    width: 300px;
    margin-bottom: 10px;
  }
</style>
