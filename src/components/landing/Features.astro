---
import features from '../../config/features.json'
---

<h1 class="text-center font-bold text-5xl mt-10">Features</h1>

<div>
  {
    features.map((feature) => {
      return (
        <div>
          <h1 class="text-center font-bold text-2xl mt-5">{feature.title}</h1>
          <p class="text-center text-xl mt-5">{feature.description}</p>
        </div>
      )
    })
  }
</div>
