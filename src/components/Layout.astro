---
interface Props {
  pageTitle: string
  metaDescription?: string
}
const { pageTitle, metaDescription } = Astro.props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={metaDescription || pageTitle} />
    <link rel="icon" type="" href="/favicon.svg" />
    <title>Astro Curso | {pageTitle}</title>
  </head>
  <body> <slot /></body>
  <style>
    body {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      font-family: sans-serif;
      font-size: 1.2em;
      margin: 0 auto;
      background-color: #000;
      color: white;
    }
    a {
      color: white;
      text-decoration: none;
      /* disable viwed to <a> */
    }
  </style>
</html>
